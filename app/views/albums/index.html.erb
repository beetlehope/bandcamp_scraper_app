 <h1>Find Music under Creative Commons</h1>


<div class="search">

  <%= search_form_for @q do |f| %>
    <div class="form-group">
      <%= f.label :tags_cont, "Enter genre" %>
      <%= f.text_field :tags_cont %>
    </div>

  <div class="form-group">
  <%= f.label :license_type_eq, "Choose license type" %><br/>
  <%= f.select :license_type_eq, options_for_select(["Attribution 3.0 International (CC BY 3.0)", "Attribution-ShareAlike 3.0 International (CC BY-SA 3.0)", "Attribution-NoDerivatives 3.0 International (CC BY-ND 3.0)", "Attribution-NonCommercial 3.0 International (CC BY-NC 3.0)", "Attribution-NonCommercial-ShareAlike 3.0 International (CC BY-NC-SA 3.0)", "Attribution-NonCommercial-NoDerivatives 3.0 International (CC BY-NC-ND 3.0)"],
  @q.license_type_eq),
   :include_blank => true %>
  </div>
  <div id="search"><%= f.submit "Find music", name: nil %></div>

  <% end %>

</div>



  <ul id="albums">
<% @albums.each do |album| %>
  <li>

<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <div id="title"> <%= album.title %> </div>
      <div id="artist"> <%= album.artist %> </div>
      <div id="description"><%= album.description %> </div>
      <div id="release_date"><%= album.release_date %> </div>
      <div id="link"> <%= link_to "Link to Bandcamp", album.link %> </div>
    </div>
    <div class="col-lg-4">
      <%= image_tag album.image_src, size:'150' %>
    </div>
  </div>
</div>


</li>
 <% end %>
</ul>
